<% layout("/layouts/boilerplate") %>
    <div class="row">
        <div class="col-8 offset-2">

            <body>
                <h2 class="mt-2">edit your listing</h2>
                <form method="post" action="/listings/<%= list._id %>?_method=put">
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input name="listing[title]" type="text" value="<%= list.title %>" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea name="listing[description]" type="text"
                            class="form-control"><%= list.description %></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="image" class="form-label">Image</label>
                        <input name="listing[image]" type="text" class="form-control" value="<%= list.image %>">
                    </div>
                    <div class="row">
                        <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input name="listing[price]" type="number" class="form-control" value="<%= list.price %>">
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="location" class="form-label">Location</label>
                        <input name="listing[location]" type="text" class="form-control" value="<%= list.location %>">
                    </div>
                    </div>
                    <div class="mb-3">
                        <label for="country" class="form-label">Country</label>
                        <input name="listing[country]" type="text" class="form-control" value="<%= list.country %>">
                    </div>
                    <button class="btn btn-dark castom-btn mb-3">update list</button>
                </form>
            </body>
        </div>
    </div>